{
  "name": "exgen-cli",
  "version": "1.0.0",
  "description": "Next-Level Express Application Generator with modern architectural patterns",
  "main": "dist/index.js",
  "bin": {
    "exgen": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run build",
    "release": "standard-version",
    "clean": "rimraf dist"
  },
  "keywords": [
    "express",
    "generator",
    "cli",
    "typescript",
    "scaffold",
    "boilerplate",
    "backend",
    "api",
    "mongodb",
    "postgresql",
    "docker",
    "swagger"
  ],
  "author": {
    "name": "Xeron07",
    "email": "ni.xeron07@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Xeron07/exgen-cli.git"
  },
  "bugs": {
    "url": "https://github.com/Xeron07/exgen-cli/issues"
  },
  "homepage": "https://github.com/Xeron07/exgen-cli#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@inquirer/prompts": "^7.6.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "cosmiconfig": "^8.3.6",
    "enquirer": "^2.4.1",
    "fs-extra": "^11.1.1",
    "handlebars": "^4.7.8",
    "ora": "^5.4.1",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.6.0",
    "@types/validate-npm-package-name": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.4.0",
    "tsx": "^3.12.10",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
